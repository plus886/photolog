---
import "./src/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header";
import "@fontsource/shippori-mincho-b1";
import "@fontsource/cactus-classical-serif";
import "@fontsource/barlow-condensed";
import "@fontsource/alice";
import "@fontsource/cormorant-garamond";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>翳光臺灣 | Formosa Chiaroscuro</title>
    <ClientRouter />
    <!-- <script
      is:inline
      src="https://webfont.fontplus.jp/accessor/script/fontplus.js?3Tt6wldHrYg%3D&box=TZoH12Fyg3w%3D&aa=1&ab=1"
    ></script> -->
  </head>
  <body>
    <div
      id="layout"
      class="grid h-lvh text-zinc-800 transition-all delay-150 duration-500 ease-in-out"
    >
      <Header client:only="svelte" transition:name="header" />
      <div class="overflow-auto">
        <slot />
      </div>
    </div>
  </body>
</html>

<script>
  import { isDrawerOpen } from "../libs/stores";

  document.addEventListener("astro:page-load", () => {
    const el = document.getElementById("layout");
    if (isDrawerOpen.get()) {
      isDrawerOpen.set(false);
    }
    isDrawerOpen.subscribe((open) => {
      el?.classList.toggle("grid-cols-[1fr_1fr]", open);
      el?.classList.toggle("grid-cols-[1fr_5fr]", !open);
    });
  });
</script>

